<div class="row">
  <div class="small-3 large-2 columns ">
    <img src="<%= SpaceFace.CurrentUser.get('profile_img_url') %>" />
  </div>
  <div class="small-9 large-10 columns">
    <p><strong><%= status.get("user").name %></strong> 
    <br>
    <%= status.escape("body") %>
    <ul class="inline-list">
      <li><%= status.get("likes").length %> likes</li>
      <li>
        <% liked_class = status.get('is_liked') ? 'liked' : 'not-liked' %> 
        <div class="<%= liked_class %> like-buttons">
          <button class="tiny button like" data-id="<%= status.id %>">Like</button>
          <button class="tiny button unlike" data-id="<%= status.id %>">Unlike</button>
        </div>
      </li>
      <!-- <li><a href="">Reply</a></li>
      <li><a href="">Share</a></li> -->
    </ul>
  </div>
</div>
<hr />
