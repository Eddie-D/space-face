<div class="row">
  <div class="small-3 large-2 columns">
    <img src="<%= photo.get('user').profile_img_url %>" />
  </div>
  <div class="small-9 large-10 columns post-body">
    <p><strong><%= photo.get("user").name %></strong> 
    <br>
    <div class="small-9 large-10 columns">
      <p>
        <%= photo.get('description') %>
      </p>
      <img src="<%= photo.get('url') %>" />
    </div>
    <ul class="inline-list">
      <li><%= photo.get("likes").length %> likes</li>
      <li>
        <% liked_class = photo.get('is_liked') ? 'liked' : 'not-liked' %> 
        <div class="<%= liked_class %> like-buttons">
          <button class="tiny button like" data-id="<%= photo.id %>">
            Like
          </button>
          <button class="tiny button unlike" data-id="<%= photo.id %>">
            Unlike
          </button>
        </div>
      </li>
    </ul>
    <div>
      <% photo.get('comments').each(function(comment) { %>
        <%= JST["comments/comment"]({comment: comment}) %>
      <% }) %>
    </div>
    <%= JST["comments/comment_form"]({post: photo}) %>
  </div>
</div>
<hr />
